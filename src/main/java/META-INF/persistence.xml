<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
    version="3.0">
	<persistence-unit name="sistema" transaction-type="RESOURCE_LOCAL">
		<!-- JPA -->
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<!-- Classe referente a entidade -->
	
		<properties>
			<property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />
			
			<property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://127.0.0.1:5432/sistema"/>
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="jakarta.persistence.jdbc.password" value="postgres" />
			
			<property name="hibernate.default_schema" value="sistema"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			
		</properties>
	</persistence-unit>
</persistence> 